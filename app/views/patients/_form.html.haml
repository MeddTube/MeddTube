= form_for @patient do |f|
  - if @patient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patient.errors.count, "error")} prohibited this patient from being saved:"
      %ul
        - @patient.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :firstname
    = f.text_field :firstname
  .field
    = f.label :lastname
    = f.text_field :lastname
  .field
    = f.label :birthdate
    = f.datetime_select :birthdate
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :medicalrecordnumber
    = f.text_field :medicalrecordnumber
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :medication
    = f.text_field :medication
  .field
    = f.label :diet
    = f.text_field :diet
  .field
    = f.label :condition
    = f.text_field :condition
  .actions
    = f.submit 'Save'
